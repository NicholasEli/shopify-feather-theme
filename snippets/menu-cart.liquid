<div data-menu-cart="overlay" class="feather-menu-cart animate__animated animate__fadeIn">
	<div data-menu-cart="dialog" class="feather-menu-cart__dialog animate__animated animate__fadeInRight">
		<a data-btn="cart" class="feather-menu-cart__dialog-close container container--padding">
			{% render 'icon-caret' %}
			<p>Continue Shopping</p>
		</a>
		<div class="feather-menu-cart__dialog-header container container--padding">
			<h4>Cart</h4>
			<p>{{ cart.items.size }} Products</p>
		</div>
		<div data-cart-items class="feather-menu-cart__dialog-body feather-cart-items">
			{% for item in cart.items %}
				{% render 'cart-item', item: item %}
			{% endfor %}
		</div>
	</div>
</div>