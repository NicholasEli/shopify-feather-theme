{% liquid
	assign title = item.title | split: ' - '
	assign product_title = title[0]
	assign variant_title = title[1]
%}
<div data-cart-item class="feather-cart-item container container--padding">
	<div class="feather-cart-item-details row">
		<div class="feather-cart-item-image col-xs-3">
			<img data-cart-item-image src="{{ item | img_url: 'compact' }}" title="{{ item.title }}" />
		</div>
		<div class="feather-cart-item-title col-xs-7">
			<h5 data-cart-item-title>{{ product_title }}</h5>
			<p>Variant: <span data-cart-item-variant>{{ variant_title }}</span></p>
		</div>
		<a data-remove-lineitem="{{ item.variant_id }}" class="feather-cart-item-remove">{% render 'icon-close' %}</a>
	</div>
	<div class="feather-cart-item-quantity-total">
		<div class="input">
			<input data-cart-item-quantity type="number" placeholder="0" value="{{ item.quantity }}"/>
		</div>
		<p data-cart-item-price>{{ item.final_line_price | money }}</p>
	</div>
</div>