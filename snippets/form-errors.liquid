{% assign section_id = 'shopify-section-' | append: section %}

<script>
	{% for error in errors %}
		{% if form == 'contact' %}
			{% if error == 'email' %}
				window.Feather.form_errors.push({
					section: '{{ section_id }}',
					form:'contact',
					field: 'email',
					message: 'Email address is invalid'
				});
			{% endif %}
		{% endif %}
	{% endfor %}
</script>