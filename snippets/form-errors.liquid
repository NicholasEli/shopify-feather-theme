{% assign section_id = 'shopify-section-' | append: section %}

<script>
	if (!window.Feather.form_errors) window.Feather.form_errors = [];

	{% for error in errors %}
		{% if error == 'form' %}
			window.Feather.form_errors.push({
				section: '{{ section_id }}',
				form: '{{ form }}',
				field: '{{ error }}',
				message: '{{ errors.messages[error] }}'
			})
		{% endif %}

		{% if error == 'email' or error == 'password' %}
			window.Feather.form_errors.push({
				section: '{{ section_id }}',
				form: '{{ form }}',
				field: '{{ error }}',
				message: '{{ error }} {{ errors.messages[error] }}'
			})
		{% endif %}

	{% endfor %}
</script>