<div class="container container--padding container--{{ section.settings.container_width }}">
	{% if section.settings.title %}<h1>{{ page.title }}</h1>{% endif %}
	{{ page.content }}
</div>

{% schema %}
	{
		"name": "Page Content",
		"class": "feather-page-content",
		"tag": "section",
		"settings": [
			{
				"type": "checkbox",
				"id": "title",
				"label": "Display Page Title",
				"default": true
			},
			{
				"type": "select",
				"id": "container_width",
				"label": "Max Width",
				"options": [
			    {
			      "value": "md",
			      "label": "Medium"
			    },
			    {
			      "value": "lg",
			      "label": "Large"
			    },
			    {
			      "value": "xl",
			      "label": "Extra Large"
			    }
			  ],
			  "default": "xl"
			}
		]
	}
{% endschema %}