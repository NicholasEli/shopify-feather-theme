<div class="container container--padding container--md">
  {% form 'contact' %}
    {% render 'form-errors', form: 'contact', errors: form.errors %}
    <div class="row">
      <div class="col-xs-12 col-md-6">
        <label for="first-name">First name</label>
        <input type="text" name="contact[first_name]" id="first-name" />
      </div>

      <div class="col-xs-12 col-md-6">
        <label for="last-name">Last name</label>
        <input type="text" name="contact[last_name]" id="last-name" />
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-md-6">
        <label for="phone">Phone</label>
        <input type="tel" name="contact[phone]" id="phone" />
      </div>

      <div class="col-xs-12 col-md-6">
        <label for="email">Email</label>
        <input type="email" name="contact[email]" id="email" />
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-md-6">
        <label for="order-number">Order number</label>
        <input type="text" name="contact[order_number]" id="order-number" />
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12">
        <label for="message">Message</label>
        <textarea name="contact[body]" id="message"></textarea>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12">
        <input class="button button--primary" type="submit" value="Send" />
      </div>
    </div>
  {% endform %}
</div>

{% schema %}
  {
    "name": "Contact Form",
    "class": "feather-contact-form",
    "tag": "section",
    "presets": [
      {
        "name": "Contact Form"
      }
    ]
  }
{% endschema %}