{% liquid 

%}
<hr>
	{% for product in all_products %}
		{{ product.handle }}
	{% endfor %}
<hr>
<div class="container container--padding container--lg">
	<div class="row">
		<div class="col-xs-12 feather-product-spotlight__tagline" data-in-view>
			<p>{{ section.settings.tagline}}</p>
		</div>
	</div>
</div>
<div class="container container--padding container--md">
	<div class="row end-md">
		<div class="col-xs-12 col-md-6 feather-product-spotlight__sub-tagline" data-in-view>
			<p>{{ section.settings.subtagline}}</p>
		</div>
	</div>
</div>
<div class="container container--padding container--md">
	<div class="row">
		<div class="col-xs-12 feather-product-spotlight__items">
			{% for item in all_products %}
				<a title="{{ item.title }}" href="{{ item.url }}" class="feather-product-spotlight__item">
					<img src="{{ item.feature_image }}" />
				</a>
			{% endfor %}
		</div>
	</div>
</div>

{% schema %}
	{
		"name": "product-spotlight",
		"class": "feather-product-spotlight",
		"tag": "section",
		"settings": [
			{
				"id": "tagline",
				"type": "text",
				"label": "Tagline",
				"default": "Outdoor furniture that turns your patio into an oasis of. Our furniture combines nature and modern design with materials your company will love."
			},
			{
				"id": "subtagline",
				"type": "text",
				"label": "Sub Tagline",
				"default": "Spotlight: Products in focus"
			}
		],
		"blocks": [
	    {
	      "type": "products-banner",
	      "name": "collections-banner",
	      "settings": [
	        {
	          "id": "image",
	          "type": "image_picker",
	          "label": "Featured Image"
	        },
	        {
	          "id": "title",
	          "type": "text",
	          "label": "Text Overlay"
	        },
	        {
	          "id": "text",
	          "type": "url",
	          "label": "Collection URL"
	        }
	      ]
	    }
  	]
	}
{% endschema %}

