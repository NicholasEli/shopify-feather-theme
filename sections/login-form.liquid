<div class="container container--padding container--md">
  {% form 'customer_login' %}
    {% render 'form-errors', section: section.id, form: 'login', errors: form.errors %}
    <div class="row">
      <div class="form__input col-xs-12" data-input="email">
        <label for="email">Email</label>
        <input placeholder="Email" type="email" name="customer[email]" />
      </div>
    </div>

    <div class="row">
      <div class="form__input col-xs-12" data-input="password">
        <label for="password">Password</label>
        <input placeholder="Password" type="password" name="customer[password]"/>
      </div>
    </div>
    
    <div class="row">
      <div class="col-xs-12">
        <input class="button button--primary" type="submit" value="Send" />
      </div>
    </div>
  {% endform %}
</div>

{% schema %}
  {
    "name": "Contact Form",
    "class": "feather-login-form",
    "tag": "section",
    "presets": [
      {
        "name": "Login Form"
      }
    ]
  }
{% endschema %}