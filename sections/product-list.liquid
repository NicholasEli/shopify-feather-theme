<div class="container container--padding container--lg">
	<ul class="row">
		{% for product in collection.products %}
			<li
				data-in-view
				class="col-xs-6 col-sm-4 col-md-3"
			>{% render 'item', item: product %}</li>
		{% endfor %}
	</ul>
</div>

{% schema %}
	{
		"name": "Collection Products",
		"class": "feather-product__list",
		"tag": "section",
		"settings": []
	}
{% endschema %}