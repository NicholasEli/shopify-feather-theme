<div
	data-recommendations
	data-section="{{ section.id }}"
	data-product="{{ product.id }}"
	class="container container--padding"
>
	{% if section.settings.blocks.products.size > 0 %}
		<div class="row">
			{% for item in section.blocks.products %}
				{% render 'item', item: item %}
			{% endfor %}
		</div>
	{% endif %}
</div>

{% schema %}
	{
		"name": "Related Products",
		"tag": "section",
		"class": "feather-product__related",
		"settings": [
			{
				"id": "title",
				"type": "text",
				"label": "Title",
				"default": "Make it complete"
			}
		],
		"blocks": [
			{
	      "type": "products",
	      "name": "Products",
	      "settings": [
	        {
	          "id": "product",
	          "type": "product",
	          "label": "Product"
	        }
	      ]
	    }
	  ]
	}
{% endschema %}