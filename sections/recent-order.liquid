<div class="container container--padding">
	<div class="row">
		<div class="col-xs-12">
			<h5>Recent Order</h5>
		</div>
	</div>
	<div class="row">
		{% if customer.orders_count == 0 %}
			<div class="col-xs-12">
				<p>You currently have made no orders.</p>
			</div>
		{% endif %}
		{% paginate customer.orders by 1 %}
			{% for order in customer.orders %}
				{% render 'order', order: order %}
			{% endfor %}
		{% endpaginate %}
	</div>
</div>

{% schema %}
	{
		"name": "Recent Order",
		"tag": "section",
		"class": "feather-recent-order"
	}
{% endschema %}