<header>
	<div class="container container--fluid">
		<nav class="nav">
			<div id="logo" class="nav__logo">
				<a  href="/">
					{%- if section.settings.logo != blank -%}
						<img
							srcset="{{ section.settings.logo | image_url: width: section.settings.logo_width }} 1x, {{ section.settings.logo | image_url: width: image_size_2x }} 2x"
							alt="{{ section.settings.logo.alt | default: shop.name | escape }}"
						/>
	        {%- else -%}
	        	<span>{{ shop.name }}</span>
	        {%- endif -%}
	      </a>
			</div>
			<ul class="nav__links">
				{%- for link in linklists.main-menu.links -%}
					<li class="nav__item {% if link.current %}nav__item--active{% endif %}">
						<a href="{{ link.url }}">{{ link.title }}</a>
						{% if link.links.size > 0 %}
							<ul>
								{%- for child_link in link.links -%}
									<li>
										<a href="{{ child_link.url }}">{{ child_link.title }}</a>
											{% if child_link.links.size > 0 %}
												<ul>
													{%- for grandchild_link in child_link.links -%}
														<li>
															<a href="{{ grandchild_link.url }}">{{ grandchild_link.title }}</a>
														</li>
													{%- endfor -%}
												</ul>
											{%- endif -%}
									</li>
								{%- endfor -%}
							</ul>
						{%- endif -%}		
					</li>
				{%- endfor -%}
			</ul>
			<a class="nav__mobile-menu-btn">
				{% render 'icon-hamburger' %}
				{% render 'icon-close' %}
			</a>
		</nav>
	</div>
</header>