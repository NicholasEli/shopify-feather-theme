<div id="mobile-menu" data-el="mobile-menu">
	<nav class="nav">
		<ul class="nav__links">
			{%- for link in linklists.main-menu.links -%}
				<li
					class="{% if link.links.size > 0 %}nav__item-dropdown{% else %}nav__item{% endif %} {% if link.current %}nav__item--active{% endif %}"
				>
					{% if link.links.size > 0 %}
						<span>{{ link.title }}</span>
						<ul class="nav__child">
							{%- for child_link in link.links -%}
								<li class="nav__child-item">
									<a href="{{ child_link.url }}">{{ child_link.title }}</a>
										{% if child_link.links.size > 0 %}
											<ul class="nav__grandchild">
												{%- for grandchild_link in child_link.links -%}
													<li class="nav__grandchild-item">
														<a href="{{ grandchild_link.url }}">{{ grandchild_link.title }}</a>
													</li>
												{%- endfor -%}
											</ul>
										{%- endif -%}
								</li>
							{%- endfor -%}
						</ul>
					{%- else -%}
						<a href="{{ link.url }}">{{ link.title }}</a>
					{%- endif -%}		
				</li>
			{%- endfor -%}
		</ul>
	</nav>
</div>